<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="490.0" prefWidth="800.0" styleClass="mainFxmlClass" stylesheets="@/style/dashboardd_admin.css" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.dashboardd_admincontroller">

    <children>
        <AnchorPane prefHeight="490.0" prefWidth="800.0" stylesheets="@../style/dashboardd_admin.css">



            <!-- ================= CARD STATISTIC ================= -->
            <HBox layoutX="215.0" layoutY="28.0" spacing="25.0">

                <!-- Available Bus -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card">

                    <children>
                        <Label layoutX="15.0" layoutY="15.0" style="-fx-text-fill: white;" text="Available Bus">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>

                        <Label fx:id="labelAvailableBus" layoutX="15.0" layoutY="50.0" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                    </children>
                </AnchorPane>


                <!-- Income Today -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card">

                    <children>
                        <Label layoutX="15.0" layoutY="15.0" style="-fx-text-fill: white;" text="Income Today">
                        </Label>

                        <Label fx:id="labelIncomeToday" layoutX="15.0" layoutY="50.0" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                    </children>
                </AnchorPane>
   
   
                <!-- Total Income -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card">
   
                    <children>
                        <Label layoutX="15.0" layoutY="15.0" style="-fx-text-fill: white;" text="Total Income">
                        </Label>
   
                        <Label fx:id="labelTotalIncome" layoutX="15.0" layoutY="50.0" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                    </children>
                </AnchorPane>

            </HBox>
         <AnchorPane prefHeight="490.0" prefWidth="150" styleClass="left-form" stylesheets="@../style/dashboardd_admin.css">
            <children>
               <FontIcon iconColor="#fff8f8" iconLiteral="fas-user" iconSize="80" layoutX="35.0" layoutY="112.0" />
               <Text fill="white" layoutX="29.0" layoutY="140.0" text="Welcome,">
                  <font>
                     <Font name="Berlin Sans FB" size="20" />
                  </font>
               </Text>
               <Label layoutX="40.0" layoutY="144.0" text="Admin" textFill="#c4b2ff">
                  <font>
                     <Font name="Arial Black" size="17" />
                  </font>
               </Label>
               <VBox layoutX="10" layoutY="200" prefWidth="130" spacing="10">
                  <children>
                     <Button fx:id="btnDashboard" onAction="#openDashboard" prefHeight="31.0" prefWidth="134.0" text="Dashboard" />
                     <Button fx:id="btnAvailableBuses" onAction="#openAvailableBuses" prefHeight="31.0" prefWidth="139.0" text="Available Buses" />
                     <Button fx:id="btnComplaint" onAction="#openComplaint" prefHeight="31.0" prefWidth="142.0" text="Complaint" />
                     <Button fx:id="btnCustomers" onAction="#openCustomers" prefHeight="31.0" prefWidth="137.0" text="Customers" />
                  </children>
               </VBox>
               <Button fx:id="btnLogout" layoutX="10.0" layoutY="445.0" onAction="#logout" prefHeight="31.0" prefWidth="130.0" text="Log Out" />
            </children>
         </AnchorPane>

        </AnchorPane>
    </children>
</StackPane>
