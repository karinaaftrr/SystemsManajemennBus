<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="490.0" prefWidth="800.0" stylesheets="@/style/bookingticket.css"
           xmlns="http://javafx.com/javafx/13"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Customers.BookingTicketController">

    <children>
        <AnchorPane prefHeight="490.0" prefWidth="800.0">

            <!-- ================= LEFT BAR ================= -->
            <AnchorPane prefHeight="491.0" prefWidth="150.0"
                        styleClass="left-form"
                        stylesheets="@../../../../target/classes/style/bookingticket.css">

                <children>
                    <FontIcon iconColor="#ffffff" iconLiteral="fas-user"
                             iconSize="70" layoutX="40.0" layoutY="74.0"/>

                    <Text fill="#ffffff" layoutX="35.0" layoutY="130.0" text="Welcome,">
                        <font>
                            <Font name="Berlin Sans FB" size="18.0"/>
                        </font>
                    </Text>

                    <Label layoutX="33.0" layoutY="134.0"
                           text="Customer" textFill="#c4b2ff">
                        <font>
                            <Font name="Arial Black" size="16.0"/>
                        </font>
                    </Label>

                    <VBox layoutX="10.0" layoutY="190.0" prefWidth="130.0" spacing="15">

                        <Button fx:id="btnDashboard" text="Dashboard"
                                onAction="#openDashboard"
                                prefHeight="31.0" prefWidth="134.0"/>

                        <Button fx:id="btnComplaint" text="Complaint"
                                onAction="#openComplaint"
                                prefHeight="31.0" prefWidth="135.0"/>

                        <Button fx:id="btnBookingTicket" text="Booking Ticket"
                                onAction="#openBookingTicket"
                                prefHeight="31.0" prefWidth="131.0"/>

                    </VBox>

                    <Button fx:id="btnLogout"
                            layoutX="15.0" layoutY="440.0"
                            onAction="#logout"
                            text="Logout"/>
                </children>
            </AnchorPane>

            <!-- ================= TOP AREA ================= -->
            <AnchorPane layoutX="168.0" prefHeight="192.0" prefWidth="631.0"
                        styleClass="root"
                        stylesheets="@../../../../target/classes/style/bookingticket.css">

                <children>

                    <!-- PANEL CUSTOMER INFORMATION -->
                    <AnchorPane layoutX="237.0" prefHeight="217.0" prefWidth="395.0"
                                styleClass="customer-panel">

                        <children>

                            <Text fill="WHITE" layoutX="17.0" layoutY="22.0"
                                  text="Customer Information">
                                <font>
                                    <Font name="Arial Black" size="20.0"/>
                                </font>
                            </Text>

                            <Label layoutX="50.0" layoutY="52.0" text="Gender:"/>
                            <ComboBox fx:id="genderCombo"
                                      layoutX="133.0" layoutY="45.0"
                                      prefHeight="30.0" prefWidth="130.0"/>

                            <Label layoutX="50.0" layoutY="100.0" text="Phone #:"/>
                            <TextField fx:id="phoneField"
                                       layoutX="133.0" layoutY="94.0"
                                       prefHeight="31.0" prefWidth="130.0"/>

                            <Label layoutX="50.0" layoutY="148.0" text="Date:"/>
                            <DatePicker fx:id="customerDate"
                                        layoutX="133.0" layoutY="142.0"
                                        prefHeight="34.0" prefWidth="130.0"/>

                            <Button fx:id="btnReset"
                                    layoutX="303.0" layoutY="117.0"
                                    onAction="#handleResetTop"
                                    text="Reset"/>

                            <Button fx:id="btnSelect"
                                    layoutX="303.0" layoutY="158.0"
                                    onAction="#handleSelect"
                                    text="Select"/>

                        </children>
                    </AnchorPane>

                    <!-- KIRI ATAS -->
                    <Label layoutX="19.0" layoutY="32.0" text="Bus ID:"/>
                    <ComboBox fx:id="busIDCombo"
                              layoutX="104.0" layoutY="27.0"
                              prefHeight="31.0" prefWidth="103.0"/>

                    <Label layoutX="21.0" layoutY="89.0" text="Location:"/>
                    <ComboBox fx:id="locationCombo"
                              layoutX="104.0" layoutY="83.0"
                              prefHeight="31.0" prefWidth="103.0"/>

                    <Label layoutX="21.0" layoutY="142.0" text="Seat #:"/>
                    <TextField fx:id="seatField"
                               layoutX="103.0" layoutY="137.0"
                               prefHeight="31.0" prefWidth="109.0"/>

                </children>
            </AnchorPane>

            <!-- ================= SELECT CUSTOMER INFORMATION ================= -->
            <AnchorPane layoutX="168.0" layoutY="219.0"
                        prefHeight="271.0" prefWidth="631.0"
                        styleClass="root"
                        stylesheets="@../../../../target/classes/style/bookingticket.css">

                <children>

                    <Text layoutX="20.0" layoutY="27.0" text="Select Customer Information">
                        <font>
                            <Font name="System Bold" size="17.0"/>
                        </font>
                    </Text>

                    <!-- KIRI -->
                    <Label layoutX="22.0" layoutY="59.0" text="Phone Number:"/>
                    <Label fx:id="selectPhoneLabel"
                           layoutX="148.0" layoutY="53.0"
                           prefHeight="31.0" prefWidth="150.0"
                           text="-"/>

                    <Label layoutX="23.0" layoutY="110.0" text="Gender:"/>
                    <Label fx:id="selectGenderLabel"
                           layoutX="148.0" layoutY="103.0"
                           prefHeight="31.0" prefWidth="150.0"
                           text="-"/>

                    <Label layoutX="22.0" layoutY="161.0" text="Date:"/>
                    <Label fx:id="selectDateLabel"
                           layoutX="148.0" layoutY="153.0"
                           prefHeight="31.0" prefWidth="150.0"
                           text="-"/>

                    <!-- KANAN -->
                    <Label layoutX="363.0" layoutY="52.0" text="Bus ID:"/>
                    <Label fx:id="selectBusLabel"
                           layoutX="454.0" layoutY="44.0"
                           prefHeight="34.0" prefWidth="150.0"
                           text="-"/>

                    <Label layoutX="361.0" layoutY="102.0" text="Location:"/>
                    <Label fx:id="selectLocationLabel"
                           layoutX="454.0" layoutY="94.0"
                           prefHeight="34.0" prefWidth="150.0"
                           text="-"/>

                    <Label layoutX="363.0" layoutY="156.0" text="Seat #:"/>
                    <Label fx:id="selectSeatLabel"
                           layoutX="449.0" layoutY="145.0"
                           prefHeight="34.0" prefWidth="150.0"
                           text="-"/>

                    <Button fx:id="btnReceipt"
                            layoutX="334.0" layoutY="218.0"
                            prefHeight="31.0" prefWidth="73.0"
                            onAction="#handleReceipt" 
                            text="Receipt"/>

                    <Button fx:id="btnPay"
                            layoutX="412.0" layoutY="217.0"
                            prefHeight="31.0" prefWidth="73.0"
                            onAction="#handlePay"
                            text="Pay"/>

                    <Text layoutX="494.0" layoutY="235.0" text="Total Rp."/>

                </children>
            </AnchorPane>

        </AnchorPane>
    </children>
</StackPane>
