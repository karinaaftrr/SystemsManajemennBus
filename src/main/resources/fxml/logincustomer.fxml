                  <Button fx:id="login" layoutX="193.0" layoutY="327.0" onAction="#login" prefHeight="43.0" prefWidth="79.0" styleClass="login-btn" stylesheets="@../style/loginadmin.css" text="LOGIN" />
                  <Button fx:id="btnClose" layoutX="355.0" layoutY="14.0" onAction="#Close" prefHeight="24.0" prefWidth="41.0" styleClass="close" stylesheets="@../style/loginadmin.css" text="">
                     <graphic>
                        <FontIcon iconLiteral="fas-window-close" iconSize="20" text="" />
                     </graphic></Button>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</StackPane>
