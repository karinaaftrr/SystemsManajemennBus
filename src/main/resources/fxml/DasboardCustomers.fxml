<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="490.0" prefWidth="750.0" styleClass="mainFxmlClass" stylesheets="@/style/dasboardcustomers.css" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Customers.DasboardCustomersController">

    <children>
        <AnchorPane prefHeight="490.0" prefWidth="750.0" styleClass="mainFxmlClass" stylesheets="@../style/dasboardcustomers.css">

            <!-- ================= PANEL KIRI ================= -->
            <AnchorPane prefHeight="490.0" prefWidth="150.0" styleClass="left-form" stylesheets="@../style/dasboardcustomers.css">

                <children>
                    <FontIcon iconColor="#ffffff" iconLiteral="fas-user" iconSize="70" layoutX="40.0" layoutY="104.0" />

                    <Text fill="#ffffff" layoutX="35.0" layoutY="130.0" text="Welcome,">
                        <font>
                            <Font name="Berlin Sans FB" size="18.0" />
                        </font>
                    </Text>

                    <Label layoutX="33.0" layoutY="134.0" text="Customer" textFill="#c4b2ff">
                        <font>
                            <Font name="Arial Black" size="16.0" />
                        </font>
                    </Label>

                    <!-- MENU -->
                    <VBox layoutX="10.0" layoutY="190.0" prefWidth="130.0" spacing="15">

                        <Button fx:id="btnDashboard" onAction="#openDashboard" prefHeight="31.0" prefWidth="134.0" text="Dashboard" />

                        <Button fx:id="btnComplaint" onAction="#openComplaint" prefHeight="31.0" prefWidth="135.0" text="Complaint" />

                        <Button fx:id="btnBookingTicket" onAction="#openBookingTicket" prefHeight="31.0" prefWidth="131.0" text="Booking Ticket" />
                    </VBox>

                    <Button fx:id="btnLogout" layoutX="15.0" layoutY="440.0" onAction="#logout" prefHeight="31.0" prefWidth="119.0" text="Log Out" />
                </children>
            </AnchorPane>

            <!-- ================= CARD STATISTIC ================= -->
            <HBox layoutX="180.0" layoutY="30.0" spacing="25.0" stylesheets="@../style/dasboardcustomers.css">

                <!-- Available Bus -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card" stylesheets="@../../../../target/classes/style/dasboardcustomers.css">

                    <children>
                        <Label layoutX="37.0" layoutY="15.0" style="-fx-text-fill: white;" text="Available Buses">

                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>

                        <Label fx:id="labelAvailableBus" layoutX="70.0" layoutY="46.0" style="-fx-text-fill: white; -fx-font-size: 18px;" text="0" />
                    </children>
                </AnchorPane>

                <!-- Income Today -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card" stylesheets="@../../../../target/classes/style/dasboardcustomers.css">
                    <children>
                        <Label layoutX="38.0" layoutY="17.0" style="-fx-text-fill: white;" text="Booking Ticket" />
                  <Button layoutX="39.0" layoutY="50.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="73.0" text="Pesan" />
                    </children>
                </AnchorPane>

                <!-- Total Income -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card" stylesheets="@../../../../target/classes/style/dasboardcustomers.css">
                    <children>
                        <Label layoutX="52.0" layoutY="15.0" style="-fx-text-fill: white;" text="Pengaduan" />
                  <Button layoutX="43.0" layoutY="50.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="73.0" text="Kritik" />
                    </children>
                </AnchorPane>

            </HBox>

            <!-- ================= UPCOMING TRIPS ================= -->
            <AnchorPane layoutX="172.0" layoutY="154.0" prefHeight="160.0" prefWidth="569.0" styleClass="info-pane" stylesheets="@../style/dasboardcustomers.css">

                <children>

                    <Label layoutX="11.0" layoutY="7.0" text="Upcoming Trips">
                        <font>
                            <Font name="Candara Bold" size="20.0" />
                        </font>
                    </Label>

                    <FontIcon iconLiteral="fas-bus" iconSize="15" layoutX="14.0" layoutY="55.0" />

                    <Label layoutX="39.0" layoutY="40.0" text="Bus ID 1 goes to Kotabumi">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                    <Label layoutX="14.0" layoutY="71.0" text="~ Admin update Schedule from Bus ID 2">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                    <Label layoutX="13.0" layoutY="97.0" text="~ New Complaint Received Used Ikbal">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                </children>
            </AnchorPane>

            <!-- ================= RECENT TICKET ================= -->
            <AnchorPane layoutX="174.0" layoutY="321.0" prefHeight="160.0" prefWidth="569.0" styleClass="info-pane" stylesheets="@../style/dasboardcustomers.css">

                <children>

                    <Label layoutX="11.0" text="My Recent Ticket">
                        <font>
                            <Font name="Candara Bold" size="20.0" />
                        </font>
                    </Label>

                    <FontIcon iconLiteral="fas-user" iconSize="15" layoutX="14.0" layoutY="48.0" />

                    <FontIcon iconLiteral="fas-bars" iconSize="15" layoutX="12.0" layoutY="81.0" />

                    <FontIcon iconLiteral="fas-user" iconSize="15" layoutX="13.0" layoutY="115.0" />

                    <Label layoutX="35.0" layoutY="33.0" text="Bus ID 1">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                    <Label layoutX="35.0" layoutY="66.0" text="Bus ID 1 Kotabumi - Bandarlampung 30 Nov 2025">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                    <Label layoutX="35.0" layoutY="99.0" text="Pending Complaints">
                        <font>
                            <Font name="Cooper Black" size="15.0" />
                        </font>
                    </Label>

                    <Button layoutX="459.0" layoutY="105.0" prefHeight="30.0" prefWidth="61.0" styleClass="btn-detail" text="Detail" />
                </children>
            </AnchorPane>

        </AnchorPane>
    </children>
</StackPane>
